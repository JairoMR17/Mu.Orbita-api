# ============================================================================
# Mu.Orbita API - Environment Variables
# Copiar a .env y rellenar con valores reales
# ============================================================================

# App
APP_NAME=Mu.Orbita API
APP_ENV=development
DEBUG=true
API_VERSION=v1

# Server
HOST=0.0.0.0
PORT=8000

# Database (Neon PostgreSQL)
# Formato: postgresql://user:password@host/database?sslmode=require
DATABASE_URL=postgresql://neondb_owner:xxxxx@ep-xxxxx.eu-central-1.aws.neon.tech/neondb?sslmode=require

# JWT Auth
JWT_SECRET_KEY=tu-secreto-super-seguro-cambiar-en-produccion
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Google OAuth
GOOGLE_CLIENT_ID=xxxxx.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=xxxxx
GOOGLE_REDIRECT_URI=http://localhost:8000/api/v1/auth/google/callback

# Frontend URL (para redirects despu√©s de auth)
FRONTEND_URL=http://localhost:3000

# CORS Origins (separados por coma)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://muorbita.com

# Stripe (para verificar webhooks)
STRIPE_SECRET_KEY=sk_test_xxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxx

# n8n Webhook Secret (para verificar llamadas de n8n)
N8N_WEBHOOK_SECRET=tu-secreto-n8n

# Google Drive (para URLs de reportes)
GOOGLE_DRIVE_FOLDER_ID=xxxxx
